<h1>Listing shows</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.showName %></td>
        
        <td><%= show.category %></td>
        <td><%= show.description %></td>
        <td><%= link_to 'Show', show, class: "content-link" %></td>
        <td><%= link_to 'Edit', edit_show_path(show), class: "content-link"  %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' }, class: "content-link" %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<br>

<%= link_to 'New Show', new_show_path, class: "content-link"  %>



<br><br>

<h1> Show Chooser (4a): </h1><!add dropdown>

<table>
  <thead>
    <tr>
      <th>ShowName</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @shows[0].query4a(1)[0]['firstName'] %></td>
        <td><%= @shows[0].query4a(1)[0]['lastName'] %></td>
        <td><%= @shows[0].query4a(1)[0]['showName'] %></td>
        <td><%= @shows[0].query4a(1)[0]['timeSlot'] %></td>
         </tr>
  </tbody>
</table>





<br><br>

<h1> Show Playsheet (4b): </h1><!add dropdown>

<table>
  <thead>
    <tr>
      <th>ShowName</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @shows[0].query4b(1, 2).each do |res| %>
      <tr>
        <td><%= res['id'] %></td>
        <td><%= res['title'] %></td>
        <td><%= res['startTime'] %></td>
        <td><%= res['endTime'] %></td>
         </tr>
    <% end %>
  </tbody>
</table>
<br><br>

<h1> Last Date Hosted (4c): </h1><!add dropdown>

<table>
  <thead>
    <tr>
      <th>HostName</th>
      <th>Last date hosted it</th>
    </tr>
  </thead>
  <tbody>
    <% @shows[0].query4c(1).each do |res| %>
      <tr>
        <td><%= res['hostName'] %></td>
        <td><%= res['lastDate'] %></td>
         </tr>
    <% end %>
  </tbody>
</table>



<br><br>

<h1> Most Frequently Played Song (4d): </h1><!add dropdown>

<table>
  <thead>
    <tr>
      <th>Song title</th>
      <th>Artist</th>
      <th>Band</th>
      <th>Album</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @shows[0].query4d(1)[0]['title'] %></td>
        <td><%= @shows[0].query4d(1)[0]['artist'] %></td>
        <td><%= @shows[0].query4d(1)[0]['band'] %></td>
        <td><%= @shows[0].query4d(1)[0]['album'] %></td>
         </tr>
  </tbody>
</table>

<br><br>



<h1> Average Host Ratings By Category (4e): </h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Average Rating</th>
    </tr>
  </thead>
  <tbody>
    <% @shows[0].query4e(1).each do |res| %>
      <tr>
        <td><%= res['firstName'] %></td>
        <td><%= res['lastName'] %></td>
        <td><%= res['average'] %></td>
         </tr>
    <% end %>
  </tbody>
</table>
