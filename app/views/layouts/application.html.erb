<!DOCTYPE html>
<html>
<head>
	<title>RadioWebsite</title>
	<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	<%= csrf_meta_tags %>
</head>
<body>

	<div class="header" id="header">
		<div class ="container" id="header-container">
			<%= RadioWebsite %>
		</div>
	</div>

	


	<nav id='nav_bar'>
		<div class="navigation">
		<div class ="container" >
			<%= link_to "Home", root_path, class: "nav-link" %> 
			<%= link_to "Radio Shows", shows_path, class: "nav-link" %>
			<%= link_to "Hosts", hosts_path, class: "nav-link" %> 
			<%= link_to "On Air Guests", guests_path, class: "nav-link" %> 
			<%= link_to "Play Sheets", play_sheets_path, class: "nav-link" %> 
			<%= link_to "Song Inventory", song_inventories_path, class: "nav-link" %> 
			<%= link_to "Contact", contact_path, class: "nav-link" %> 
			<% unless user_signed_in? %> <!--unless is equal to if not-->
				<%= link_to "Admin Sign In", new_user_session_path, class: "nav-link" %>
			<% end %>

			<% if user_signed_in? %>
				<% if admin? %>
				<%= link_to "Sign Out (Logged in as: Admin)", destroy_user_session_path, 
							method: :delete, class: "nav-link" %>
							<% else %>
							<%= link_to "Sign Out (Logged in as: Regular User)", destroy_user_session_path, 
							method: :delete, class: "nav-link" %>
							<% end %>

			<% end %>
		
	</div>
	</nav>
</div>

	<div class="content">

		<div class="container">

			<div class="content-container">
				<%= yield %>
			</div>

		</div>
	</div>

		<footer id="footer">
			<div class = "footer-container">
			Contact Us <br>
			Address:<br>
			Phone:<br>
			Email:<br>
			</div>

		</footer>


</body>
</html>
