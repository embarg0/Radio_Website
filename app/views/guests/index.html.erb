<div id="container">

    <%= render 'layouts/header' %>

<h1>Recent Guests</h1>

<div class="btn btn-success">
<%= link_to 'New Guest', new_guest_path %>
</div>

<table class="table table-bordered" style=" margin-left: 2%; margin-right: 2%; width: 95%;">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Topic</th>
      <th>Rating</th>
      <th>Timeslot number</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.guest_id %></td>
        <td><%= guest.first_name %>
        <%= guest.last_name %></td>
        <td><%= guest.description %></td>
        <td><%= guest.topic %></td>
        <td><%= guest.rating %></td>
        <td><%= guest.timeslots_id %></td>
        <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
        <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

      <%= render 'layouts/footer'%>

</div>


