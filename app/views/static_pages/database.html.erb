
<div id="container">

    <%= render 'layouts/header' %>
<div class="searcher" style="display:inline-block; margin:auto; padding-left:25%;">
<%= form_tag database_path, :method => :get do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: "example: Category: (show name)" %>
