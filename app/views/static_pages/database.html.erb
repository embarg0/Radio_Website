<table class="table table-hover" style=" margin-left: 2%; margin-right: 2%; width: 95%;">
  <caption style="font-style:bold; font-size:30px; margin-bottom:15px;">Album Table</caption>
  <thead>
    <tr>
      <th>Album</th>
      <th>Genre</th>
      <th>Label</th>
      <th>Album Recording Date</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |albums| %>
      <tr>
        <td><%= albums.album_id %></td>
        <td><%= albums.genre %></td>
        <td><%= albums.label %></td>
        <td><%= albums.album_recording_date.try(:strftime, "%B %d, %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>




