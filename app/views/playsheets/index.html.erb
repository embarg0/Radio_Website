<h1>Listing playsheets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Day of week</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @playsheets.each do |playsheet| %>
      <tr>
        <td><%= playsheet.date %></td>
        <td><%= playsheet.day_of_week %></td>
        <td><%= link_to 'Show', playsheet %></td>

        <% if admin? %>
          <td><%= link_to 'Edit', edit_playsheet_path(playsheet) %></td>
          <td><%= link_to 'Destroy', playsheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if admin? %>
  <%= link_to 'New Playsheet', new_playsheet_path %>
<% end %>